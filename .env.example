MAILPIT_URL=https://mailpit.x.x.com
MAILPIT_USERNAME=your-username
MAILPIT_PASSWORD=your-password
# Either MAILPIT_SEARCH_QUERY or TEST_EMAIL_DOMAIN must be set; search query is passed to Mailpit's /api/v1/search
MAILPIT_SEARCH_QUERY=
TEST_EMAIL_DOMAIN=mail.yourdomain.com

# Slack incoming webhook URL (required)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/XXX/YYY/ZZZ

# Optional tuning
POLL_INTERVAL_SECONDS=10
OTP_REGEX=\\b\\d{6,8}\\b
MAX_MESSAGES_PER_POLL=20
# Path to sqlite DB storing processed Mailpit message IDs to avoid duplicates
PROCESSED_DB_PATH=db/processed.sqlite
